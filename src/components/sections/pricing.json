    "description": "Pricing table section with multiple pricing tiers",
    "icon": "dollar-sign"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "subtitle": {
      "type": "text",
      "required": false
    },
    "pricingTiers": {
      "type": "component",
      "repeatable": true,
      "component": "shared.pricing-tier"
    },
    "popularLabel": {
      "type": "string",
      "default": "Most Popular"
    },
    "ctaText": {
      "type": "text",
      "required": false
    },
    "variant": {
      "type": "enumeration",
      "enum": ["light", "dark"],
      "default": "light"
    },
    "size": {
      "type": "enumeration",
      "enum": ["compact", "default", "large"],
      "default": "default"
    },
    "sectionId": {
      "type": "string"
    }
  }
}
