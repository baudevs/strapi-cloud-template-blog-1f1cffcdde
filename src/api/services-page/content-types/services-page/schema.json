{
  "kind": "singleType",
  "collectionName": "services_pages",
  "info": {
    "singularName": "services-page",
    "pluralName": "services-pages",
    "displayName": "Services Page",
    "description": "Services listing page with configurable hero and dynamic sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "hero": {
      "type": "component",
      "component": "shared.hero-section",
      "repeatable": false
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.all-services-grid",
        "sections.features",
        "sections.testimonials",
        "sections.cta",
        "sections.pricing",
        "sections.hubspot-form",
        "sections.faq",
        "shared.rich-text",
        "shared.media",
        "shared.quote"
      ]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "footer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::footer.footer"
    }
  }
}
